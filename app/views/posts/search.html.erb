<!-- app/views/posts/search.html.erb -->
<h1>Search Results</h1>

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div class="post">
      <h3><%= link_to post.title, post %></h3>
      <p><%= truncate(post.content, length: 150) %></p>
      <p><strong>Category:</strong> <%= post.category.name %></p>
      <p><strong>Posted by:</strong> <%= post.user.email %> on <%= post.created_at.strftime("%B %d, %Y") %></p>
    </div>
  <% end %>
<% else %>
  <p>No posts found for your search query.</p>
<% end %>
